@{
    ViewBag.Title = "Calendar";
}

<div class="box">
	<h4>My Year Calendar</h4>
	<div class="box-container">
        <div>
            @using(Html.BeginForm("Index", "Calendar", FormMethod.Post)) {
                @Html.Label("Select another year:")
                @Html.DropDownList("year", new SelectList(ViewBag.Years, ViewBag.CurrentYear))
                <input type="submit" value="Change Year" />
            }
        </div>
		<div>
			@Html.Action("YearCalendar", new { year = ViewBag.CurrentYear })
		</div>
		<span class="clearFix"></span>
        @Html.ActionLink("Export to Outlook", "ExportToFile", new { year = ViewBag.CurrentYearyear = ViewBag.CurrentYear })
	</div>
</div>

<div class="box" id="left-col">
	<h4>Holidays List</h4>
    <div class="box-container">
        @{ Html.RenderPartial("HolidaysList"); }
    </div>
</div>

<div class="box" id="mid-right-col">
	<h4>Vacation Suggestions</h4>
    <div class="box-container">
        @Html.Action("VacationsSuggestions", new { year = ViewBag.CurrentYear })
    </div>
</div>
