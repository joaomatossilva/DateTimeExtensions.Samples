<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>@ViewBag.Title</title>
	<link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
	<link href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" rel="stylesheet" type="text/css" />
	<script src="@Url.Content("~/Scripts/jquery-1.8.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.23.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.globalize/globalize.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    
    <script src="@Url.Content("~/Scripts/jquery.globalize/cultures/globalize.cultures.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.globalize/cultures/globalize.culture.pt-PT.js")" type="text/javascript"></script>
    <script type="text/javascript">
		$(document).ready(function () {
			$(".datepicker").datepicker({
				changeMonth: true,
				changeYear: true,
				dateFormat: 'yy-mm-dd',
				buttonImage: '/Content/images/icon-calendar.gif'
			});
		}); 
	</script>
	<script type="text/javascript">

		var _gaq = _gaq || [];
		_gaq.push(['_setAccount', 'UA-30312705-1']);
		_gaq.push(['_trackPageview']);

		(function () {
			var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
		})();

</script>
</head>

	<body>
		<a href="https://github.com/kappy/DateTimeExtensions"><img style="position: absolute; top: 0; right: 0; border: 0; z-index: 1000" src="https://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png" alt="Fork me on GitHub"/></a>
		<div id="container">
			<div id="header">
				<div id="top">
                    <h1><a href="#">DateTime Extensions Samples</a></h1>
                    @{
                        Html.RenderAction("Index", "Version");
                    }
					<span class="clearFix"></span>
				</div>
				<ul id="menu">
					<li>@Html.ActionLink("How long to...", "Index", "HowLong")</li>
					<li>@Html.ActionLink("Calendar", "Index", "Calendar")</li>
                    <li>@Html.ActionLink("Api", "Index", "ApiDocs")</li>
				</ul>
			</div>
			<div id="content">
				<div id="content-top">
                    <span class="clearFix"></span>
					<h2>@ViewBag.Title</h2>
    				<div id="localeChanger">
                    					@Html.Action("Index", "Locale")
                    </div>
					<span class="clearFix"></span>
                </div>
			@RenderBody()			
            </div>
		</div>
	</body>
</html>
